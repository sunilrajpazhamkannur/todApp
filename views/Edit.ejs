<%- include('./layout/Header') %>
<%- include('./layout/Navbar') %>

<div class="add-to-diary">
    <h1>Edit <span class="green-text">DIARY</span> </h1>
    
<form action="/diary/edit/<%= data.id %>?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= data.title %>">
    </div>

    <div class="form-group">
        <label for="desc">desc</label>
        <textarea name="desc" id="desc" cols="20" rows="10" > <%= data.desc %></textarea>
    </div>

    <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="date" value="<%= data.date %>" > 
        
    </div>

    <input type="submit" value="EDIT DIARY">

</form>   
</div>


<%- include('./layout/Footer') %>